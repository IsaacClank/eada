{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/tags/v2.5.0/cli/schemas/config-file.v1.json",
  "permissions": {
    "default": {
      "net": ["0.0.0.0:3760"],
      "env": ["HOME", "PORT", "DB_PATH"],
      "read": ["./migrations/", "/home/isaac/.local/share/eada/"],
      "write": ["/home/isaac/.local/share/eada"]
    }
  },
  "test": {
    "permissions": {
      "env": ["HOME", "PORT", "DB_PATH"],
      "read": ["./migrations/", "/home/isaac/.local/share/eada/"],
      "write": ["/home/isaac/.local/share/eada"]
    }
  },
  "tasks": {
    "ci:lint": "deno lint",
    "ci:fmt": "deno fmt --check",
    "ci:check": "deno check",
    "ci": {
      "command": "deno task test",
      "dependencies": [
        "ci:fmt",
        "ci:lint",
        "ci:check"
      ]
    },
    "dev": "deno run -P --env-file --watch src/main.ts",
    "test": "deno test -P --env-file=.env.test --coverage",
    "test:watch": "deno test -P --env-file=.env.test --watch"
  },
  "imports": {
    "@oak/common": "jsr:@oak/commons@^1.0.1",
    "@oak/oak": "jsr:@oak/oak@^17.1.6",
    "@std/assert": "jsr:@std/assert@1",
    "@std/http": "jsr:@std/http@1",
    "@std/testing": "jsr:@std/testing@^1.0.15"
  },
  "fmt": {
    "operatorPosition": "nextLine"
  }
}
