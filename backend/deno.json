{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/tags/v2.3.3/cli/schemas/config-file.v1.json",
  "tasks": {
    "ci:lint": "deno lint",
    "ci:fmt": "deno fmt --check",
    "ci:check": "deno check",
    "ci": {
      "command": "deno task test",
      "dependencies": [
        "ci:fmt",
        "ci:lint",
        "ci:check"
      ]
    },
    "dev": "deno run --env-file --allow-net --allow-read --allow-write --allow-env --watch src/main.ts",
    "test": "deno test --env-file=.env.test --allow-read --allow-write --allow-env --coverage",
    "test:watch": "deno test --env-file=.env.test --allow-read --allow-write --allow-env --watch"
  },
  "imports": {
    "@oak/common": "jsr:@oak/commons@^1.0.1",
    "@oak/oak": "jsr:@oak/oak@^17.1.6",
    "@std/assert": "jsr:@std/assert@1",
    "@std/http": "jsr:@std/http@1",
    "@std/testing": "jsr:@std/testing@^1.0.15"
  },
  "fmt": {
    "operatorPosition": "nextLine"
  }
}
